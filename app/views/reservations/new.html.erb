<h1>新規予約</h1>

<%= form_with model: @reservation, local: true do |form| %>
  <div>
    <%= form.label :site_id, "サイト" %>
    <%= form.collection_select :site_id, Site.all, :id, :name %>
  </div>

  <div>
    <%= form.label :start_date %>
    <%= form.date_field :start_date %>
  </div>

  <div>
    <%= form.label :end_date %>
    <%= form.date_field :end_date %>
  </div>

  <div>
    <%= form.submit "予約する" %>
  </div>
<% end %>